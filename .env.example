# ================================
# FlowMint Environment Variables
# ================================
# Copy this file to .env and fill in the values

# ----------------
# Solana Configuration
# ----------------
# RPC endpoint for Solana network
SOLANA_RPC_URL=https://api.devnet.solana.com

# Network: devnet, testnet, or mainnet-beta
SOLANA_NETWORK=devnet

# Commitment level: processed, confirmed, or finalized
SOLANA_COMMITMENT=confirmed

# ----------------
# Jupiter API
# ----------------
# Jupiter Quote API endpoint
JUPITER_API_URL=https://quote-api.jup.ag/v6

# Platform fee in basis points (optional, 0-100 = 0%-1%)
JUPITER_PLATFORM_FEE_BPS=0

# ----------------
# Pyth Oracle
# ----------------
# Pyth Hermes API endpoint for price feeds
PYTH_ENDPOINT=https://hermes.pyth.network

# ----------------
# Server Configuration
# ----------------
# Server port
PORT=3001

# API base URL (for CORS and redirects)
API_BASE_URL=http://localhost:3001

# Database connection string
DATABASE_URL=./data/flowmint.sqlite

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ----------------
# Frontend Configuration
# ----------------
# Next.js public API URL
NEXT_PUBLIC_API_URL=http://localhost:3001

# Next.js public Solana RPC (can be different from server)
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Next.js public network
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# ----------------
# Security & Authentication
# ----------------
# JWT secret for API authentication (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# API rate limit (requests per minute per IP)
RATE_LIMIT_RPM=100

# ----------------
# Protected Mode Defaults
# ----------------
# Default max slippage in basis points (300 = 3%)
DEFAULT_MAX_SLIPPAGE_BPS=300

# Protected mode max slippage (more conservative)
PROTECTED_MAX_SLIPPAGE_BPS=100

# Maximum price impact percentage (1.0 = 1%)
MAX_PRICE_IMPACT_PCT=1.0

# ----------------
# Optional: Jito MEV Protection
# ----------------
# Jito Block Engine URL for private transactions
# JITO_BLOCK_ENGINE_URL=https://mainnet.block-engine.jito.wtf

# Jito tip amount in lamports (0.001 SOL = 1000000 lamports)
# JITO_TIP_LAMPORTS=1000000

# ----------------
# Optional: Wallet Configuration
# ----------------
# Server-side wallet for signing transactions
# WARNING: Use with extreme caution, prefer client-side signing
# WALLET_PRIVATE_KEY=your_base58_encoded_private_key

# ----------------
# Development
# ----------------
# Enable debug mode
DEBUG=false

# Disable SSL verification (development only)
NODE_TLS_REJECT_UNAUTHORIZED=1

# ----------------
# Email Notifications (Resend)
# ----------------
# Resend API key for email notifications
# RESEND_API_KEY=re_xxxxxxxxxx

# From email address
EMAIL_FROM=notifications@flowmint.io

# ----------------
# Additional RPC Endpoints (Production)
# ----------------
# Helius RPC (recommended for production)
# HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# QuickNode RPC
# QUICKNODE_RPC_URL=https://your-endpoint.solana-mainnet.quiknode.pro/YOUR_KEY

# Triton RPC
# TRITON_RPC_URL=https://your-endpoint.triton.one

# ----------------
# PostgreSQL (Production)
# ----------------
# Use PostgreSQL in production instead of SQLite
# DATABASE_URL=postgresql://user:password@host:5432/flowmint

